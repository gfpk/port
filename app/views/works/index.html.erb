<section class=" container">
          
            <header class="proj">
              <h2>PROJECTS</h2>
            </header>

            
            <div class="row">
              <% @works.each_slice(2) do |i| %>

                <div class="row">
                  <% i.each do |work| %>

                  <div class="6u port-item">
              
                    <section>
                      <%= link_to(work, :class=>"image feature") do %>
                        <%= image_tag work.main_image_url %>
                      <%end%>
                      <a href="#" class="image feature"> </a>
                      <header>
                        <%= link_to work do %>
                          <h3><span class=""><%=work.name%></span></h3>
                        <i class="fa fa-external-link-square"></i>
                        <%end%>
                        
                        
                      </header>
                      
                      <%= link_to 'Show', work %>
                      <%= link_to 'Edit', edit_work_path(work) %>
                      <%= link_to 'Destroy', work, method: :delete, data: { confirm: 'Are you sure?' } %>
                      
                    </section>

                  </div>

                    
                  <%end%>
                </div>

              <%end%>
            </div>

                
             
            
            

            </div>
            

            <footer class="major">
              <ul class="buttons">
                <li><%= link_to 'New Work', new_work_path, :class=>"button" %></li>
              </ul>
            </footer>
          <p></p>
          </section>
        
     


